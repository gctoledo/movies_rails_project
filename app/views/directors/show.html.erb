<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "directors" %>
  </head>

  <body>
    <div class="director-container">
      <button class="new-btn">
        <%= link_to 'Editar diretor', edit_director_path %>
      </button>

      <div class="director-header">
        <h1><%= @director.name %></h1>
      </div>

      <div class="director-details">
        <p><strong>Descrição:</strong> <%= @director.description %></p>

        <div class="director-section">
          <h3>Filmes Dirigidos:</h3>
          <ul>
            <% @director.movies.each do |movie| %>
              <li><%= link_to movie.name, movie_path(movie) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
